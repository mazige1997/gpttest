{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "extends": ["next/core-web-vitals", "prettier", "plugin:prettier/recommended"],
  "plugins": ["@typescript-eslint"],
  "rules": {
    "@next/next/no-html-link-for-pages": "off"
  },
  "settings": {
    "next": {
      "rootDir": ["."]
    }
  },
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "parser": "@typescript-eslint/parser"
    }
  ]
}
